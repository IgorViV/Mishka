{
  "name": "Mishka",
  "version": "1.0.0",
  "private": true,
  "description": "Проект Mishka",
  "devDependencies": {
    "autoprefixer": "9.3.x",
    "grunt": "1.0.x",
    "grunt-browser-sync": "2.2.x",
    "grunt-contrib-less": "2.0.x",
    "grunt-contrib-watch": "1.1.x",
    "grunt-postcss": "0.9.x",
    "@htmlacademy/editorconfig-cli": "1.x",
    "stylelint": "9.6.x",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "grunt less && grunt postcss",
    "start": "npm run build && grunt serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.less"
  ],
  "engines": {
    "node": "8.11"
  }
